.stream_element{:id => publication.urn}
  .bd
    = publication_link publication
    .info
      - publication.authors.each do |k, author|
        = author_link author
        = "; "
      
  .bd
    = t('document_type.info')
    - unless publication.document_type.nil?
      = t(['document_type', publication.document_type].join("."))